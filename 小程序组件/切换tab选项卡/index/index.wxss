.content {
  width: 750rpx;
  /* height: 4040rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255,221,207,1);
}
.top-bg {
  width: 100%;
  height: 644rpx;
}
.tab {
  width: 710rpx;
  /* height: 3191px; */
  background: rgba(255,255,255,1);
  border-radius: 16rpx;
  box-shadow: 0px 2rpx 20rpx 0rpx rgba(255,65,65,0.13);
}
.nav {
  width: 100%;
  height: 93rpx;
  display: flex;
  background: linear-gradient(90deg, rgba(255,121,91,1) 0%,rgba(255,73,74,1) 100%);
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}
.nav-item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  flex: 1;
  font-family: PingFang-SC-Medium;
  font-size: 26rpx;
  color: rgba(255,255,255,1);
  /* border-right: 1rpx solid black; */
}
.dividing-line {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateX(50%) translateY(-50%);
  width: 2rpx;
  height: 26rpx;
  background: rgba(255,255,255,1);
  opacity: 0.3397;
}
.nav-item-active {
  transform: translateY(-13rpx);
  height: 106rpx;
  padding-left: 24rpx;
  padding-right: 25rpx;
  background-image: url("https://m.360buyimg.com/jrqb/jfs/t1/130338/30/19240/1754/5fd17915E83524044/d01e5b88156b6230.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  font-family: PingFang-SC-Heavy;
  font-size: 30rpx;
  color: rgba(245,64,66,1);

}
.hide {
  display: none;
}
